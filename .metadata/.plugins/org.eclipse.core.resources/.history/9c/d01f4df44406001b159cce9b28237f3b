import java.util.Locale;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		double x = 10.167;
		String b;
		char v;
		
			if(x == 10.167) {
				b = "Bom dia";
				v = 'b';
				Locale.setDefault(Locale.US);
				System.out.println("bom dia");
			}else {
				b = "Boa tarde";
				v = 't';
				System.out.println(b);
			}
			if(x > 10 && v == 'b') {
				System.out.printf("%.2f%n", x);
			}else if(x > 10 || v == 't') {
				System.out.printf("%.3f%n", x);
			}
			
			System.out.println(b + " o resultado do calculo é de " + x + " metros");
			System.out.printf("%f Você já sabe que o resultado do calculo é de $.2f metros", x, b);
	
	}

}
