import java.util.Scanner;


public class Main {
	
	public static void main(String[] args) {
		
		int quantidade, code;
		double valor, total;
		String descricao;
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Informe o codigo e a quantidade de produtos ");
		code = sc.nextInt();
		quantidade = sc.nextInt();
		valor = 0;
		descricao="";
		if(code == 1) {
			descricao = "Cachorro quente";
			valor = 4.00;
		}
		if(code == 2) {
			descricao = "X-Salada";
			valor = 4.50;			
		}
		if(code == 3) {
			descricao = "X-Bacon";
			valor = 5.00;
		}
		if(code == 4) {
			descricao = "Torrada simples";
			valor = 2.00;
		}
		if(code == 5) {
			descricao = "Refrigerante";
			valor = 1.50;
		}
		
		total  = code * valor;
		
		System.out.printf("Você comprou %d %s e o valor total é %.2f ", quantidade, descricao, valor);
	}
