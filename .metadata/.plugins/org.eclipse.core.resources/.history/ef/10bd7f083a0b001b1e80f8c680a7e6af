package entities;

public class Product {

	public String name;
	public double price;
	public int quantity;

	public double totalValueInStock() {

		return price * quatity;

	}

	public void addProducts(int quantity) {
		// o this deixa explicito que esta se referenciando ao atributo da classe e não
		// ao parametro do metodo
		this.quantity += quantity;
	}

	public void removeProducts(int quantity) {
		this.quantity -= quantity;
	}
}
