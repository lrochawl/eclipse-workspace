package exemplo_calculoTrapezio;

public class Main {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		double base1, base2, altura, resultado;
		
		base1 = 8;
		base2 = 6;
		altura = 5;
		
		resultado = (base1 + base2) / 2 * altura ;
		
		System.out.print("A area do trapezio equivale a " + resultado + "cm");
	}

}
